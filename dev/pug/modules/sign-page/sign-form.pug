if signType == 'in'
  form.sign-form.sign-control-wr__form(action="/")
    //- Inputs block
    .sign-form__inputs
      //- Input
      div(class="input-group sign-form__input " + inputError)
        label(for="signinPhone") Phone number
        .input-group__input-wr.phone
          input#signinPhone.phone-input(type="text", inputmode="tel", placeholder="Enter your phone number", value= `${phoneNumber}`, required)
          .input-group__phone-code.phone-code
            .phone-code__current
              .phone-code__current-flag
                include ../../../assets/images/svg/flags/israel-flag.svg
              span.phone-code__current-code +972
              .phone-code__current-arrow
                include ../../../assets/images/svg/arrow-down.svg
        span.input-group__error-msg Enter correct phone number
      //- Input
      div(class="input-group sign-form__input " + inputError)
        label(for="signinPassword") Password
        .input-group__input-wr.password
          div(class="input-group__hide-password " + passwordClass)
            .hide-password__show-icon
              include ../../../assets/images/svg/show-password.svg
            .hide-password__hide-icon
              include ../../../assets/images/svg/hide-password.svg
          input#signinPassword(type=passwordInputType, placeholder="Enter your password", value=passwordVal, required)
        span.input-group__error-msg Wrong password

      //- Remeber? and forgot password
      .sign-form__options
        //- Check
        .df-inline-check
          .df-inline-check__check-wr
            input#signinRemember(type="checkbox", name="signinRemember", checked)
            .df-inline-check__custom-check
              include ../../../assets/images/svg/check.svg
          label(for="signinRemember") Remember
        //- End check

        a.sign-form__forgot(href="/") Forgot your password?
      
    //- End inputs block
    button(class="btn btn__type_first sign-form__btn " + buttonStatus) SIGN IN
